<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import io.github.palexdev.materialfx.controls.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<StackPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.greengrocer.controllers.CustomerController"
           prefWidth="1200" prefHeight="800" styleClass="main-container">

    <!-- Main Content Area -->
    <BorderPane fx:id="mainContainer" styleClass="main-container">
    
    <!-- Top Navigation Bar -->
    <top>
        <HBox styleClass="top-bar" alignment="CENTER_LEFT" spacing="20">
            
            <!-- Logo -->
            <Label text="GreenGrocer." styleClass="app-logo"/>
            
            <Region HBox.hgrow="ALWAYS"/>
            
            <!-- Center: Search Bar -->
            <HBox alignment="CENTER" spacing="10">
                <!-- Search Bar Container (Acts as the input box visually) -->
                <HBox alignment="CENTER_LEFT" spacing="0" prefWidth="300" maxWidth="350" 
                      styleClass="search-bar-container">
                    
                    <TextField fx:id="searchField" promptText="Search products..." 
                                  styleClass="search-text-field"
                                  HBox.hgrow="ALWAYS" prefHeight="45"/>
                    
                    <!-- Search Button (Circle on the right) -->
                    <MFXButton fx:id="searchButton" onAction="#handleSearch" 
                               styleClass="search-button-circle" 
                               text="">
                        <graphic>
                            <FontIcon iconLiteral="fas-search" iconSize="18" iconColor="white"/>
                        </graphic>
                        <HBox.margin>
                            <Insets top="3" right="3" bottom="3" left="5"/>
                        </HBox.margin>
                    </MFXButton>
                </HBox>
            </HBox>
            
            <Region HBox.hgrow="ALWAYS"/>
            
            <!-- Loyalty Points Display -->
            <HBox alignment="CENTER" spacing="5" styleClass="loyalty-badge">
                <FontIcon iconLiteral="fas-star" iconSize="16" iconColor="#FFD700"/>
                <Label fx:id="loyaltyPointsLabel" text="0 pts" styleClass="loyalty-points-text"/>
            </HBox>
            
            <!-- Right: User Actions -->
            <HBox spacing="15" alignment="CENTER">
                <MFXButton fx:id="themeToggleBtn" onAction="#handleThemeToggle" styleClass="icon-button-transparent" text="">
                    <graphic>
                        <FontIcon iconLiteral="fas-moon" iconSize="20" iconColor="white"/>
                    </graphic>
                </MFXButton>
                <MFXButton onAction="#showProfile" styleClass="icon-button-transparent" text="">
                    <graphic>
                        <FontIcon iconLiteral="fas-user" iconSize="20" iconColor="white"/>
                    </graphic>
                </MFXButton>
                <MFXButton fx:id="cartBadge" onAction="#showCart" styleClass="icon-button-cart" text="">
                    <graphic>
                        <FontIcon iconLiteral="fas-shopping-cart" iconSize="20" iconColor="white"/>
                    </graphic>
                </MFXButton>
                <MFXButton onAction="#handleLogout" styleClass="icon-button-logout" text="">
                    <graphic>
                        <FontIcon iconLiteral="fas-sign-out-alt" iconSize="20" iconColor="#ffcdd2"/>
                    </graphic>
                </MFXButton>
                
                <!-- Hamburger Menu -->
                <MFXButton fx:id="menuButton" styleClass="menu-button-circle" text="">
                    <graphic>
                        <FontIcon iconLiteral="fas-bars" iconSize="22" iconColor="white"/>
                    </graphic>
                </MFXButton>
            </HBox>
            
        </HBox>
    </top>
    
    <!-- Main Content -->
    <center>
        <ScrollPane fitToWidth="true" fitToHeight="false" hbarPolicy="NEVER" styleClass="scroll-pane-transparent">
            <VBox fx:id="mainContentPane" spacing="25" styleClass="content-padding" VBox.vgrow="ALWAYS">
                
                <!-- Popular Items Section -->
                <VBox fx:id="carouselSection" spacing="15">
                    <HBox alignment="CENTER_LEFT">
                        <Label text="Popular Products" styleClass="section-title"/>
                    </HBox>
                    <FlowPane fx:id="carouselContainer" hgap="20" vgap="20" alignment="CENTER">
                        <!-- Popular items will be added here -->
                    </FlowPane>
                </VBox>
                
                <!-- Products Section -->
                <VBox spacing="15" VBox.vgrow="ALWAYS">
                    <Label text="All Products" styleClass="section-subtitle"/>
                    
                    <!-- Vegetables TitledPane -->
                    <TitledPane fx:id="vegetablesPane" text="ðŸ¥• Vegetables" expanded="true" styleClass="products-titled-pane">
                         <!-- Content will be replaced by Pagination in Controller -->
                         <VBox/>
                    </TitledPane>
                    
                    <!-- Fruits TitledPane -->
                    <TitledPane fx:id="fruitsPane" text="ðŸŽ Fruits" expanded="true" styleClass="products-titled-pane">
                        <!-- Content will be replaced by Pagination in Controller -->
                        <VBox/>
                    </TitledPane>
                </VBox>
                
            </VBox>
        </ScrollPane>
    </center>
    </BorderPane>

    <!-- Backdrop Overlay (Initially Invisible) -->
    <Region fx:id="backdrop" styleClass="backdrop-overlay" visible="false" opacity="0"/>

    <!-- Chatbot Button (Bottom Right) -->
    <MFXButton fx:id="chatbotButton" onAction="#openChatbot" 
               styleClass="chatbot-button" 
               text="" 
               StackPane.alignment="BOTTOM_RIGHT">
        <StackPane.margin>
            <Insets bottom="20" right="20"/>
        </StackPane.margin>
        <graphic>
            <FontIcon iconLiteral="fas-robot" iconSize="24" iconColor="white"/>
        </graphic>
    </MFXButton>

    <!-- Animated Sidebar (Initially Hidden) -->
    <VBox fx:id="sidebar" spacing="20" styleClass="sidebar-panel" 
          maxWidth="300" alignment="TOP_LEFT" translateX="320" StackPane.alignment="CENTER_RIGHT">
        
        <!-- Sidebar Header -->
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label text="Menu" styleClass="sidebar-header-text"/>
            <Region HBox.hgrow="ALWAYS"/>
            <MFXButton fx:id="closeMenuButton" styleClass="close-menu-button" text="">
                <graphic>
                    <FontIcon iconLiteral="fas-times" iconSize="20" iconColor="#757575"/>
                </graphic>
            </MFXButton>
        </HBox>
        
        <Separator/>
        
        <!-- Navigation Links -->
        <VBox spacing="10" alignment="TOP_LEFT">
            <MFXButton text=" Shop" onAction="#showProducts" styleClass="sidebar-button" maxWidth="Infinity" alignment="CENTER_LEFT">
                <graphic>
                    <FontIcon iconLiteral="fas-shopping-bag" iconSize="18" iconColor="#546e7a"/>
                </graphic>
            </MFXButton>
            <MFXButton text=" Orders" onAction="#showOrders" styleClass="sidebar-button" maxWidth="Infinity" alignment="CENTER_LEFT">
                <graphic>
                    <FontIcon iconLiteral="fas-box" iconSize="18" iconColor="#546e7a"/>
                </graphic>
            </MFXButton>
            <MFXButton text=" Ratings" onAction="#showRatings" styleClass="sidebar-button" maxWidth="Infinity" alignment="CENTER_LEFT">
                <graphic>
                    <FontIcon iconLiteral="fas-star" iconSize="18" iconColor="#546e7a"/>
                </graphic>
            </MFXButton>
            <MFXButton text=" Messages" onAction="#showMessages" styleClass="sidebar-button" maxWidth="Infinity" alignment="CENTER_LEFT">
                <graphic>
                    <FontIcon iconLiteral="fas-comment" iconSize="18" iconColor="#546e7a"/>
                </graphic>
            </MFXButton>
            <MFXButton text=" My Coupons" onAction="#showCoupons" styleClass="sidebar-button" maxWidth="Infinity" alignment="CENTER_LEFT">
                <graphic>
                    <FontIcon iconLiteral="fas-ticket-alt" iconSize="18" iconColor="#546e7a"/>
                </graphic>
            </MFXButton>
        </VBox>
        
        <Region VBox.vgrow="ALWAYS"/>
        
        <Separator/>
        
        <!-- Footer -->
        <Label text="GreenGrocer v1.0" styleClass="sidebar-footer-text"/>
    </VBox>

</StackPane>
